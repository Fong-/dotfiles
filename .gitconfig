[color]
    ui = true

[user]
    name = Nicholas Fong
    email = nickfong@users.noreply.github.com

[alias]
    # Add
    a = add
    au = add -u
    aa = add -A

    # Commit
    ca = commit -a
    ci = commit
    cm = commit -m
    cam = commit -am
    cia = commit --amend

    # Info
    st = status
    sh = show
    d = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lolas = log --graph --decorate --pretty=oneline --abbrev-commit --all --simplify-by-decoration
    ls = ls-files
    alias = config --get-regexp ^alias\\.
    ign = ls-files -o -i --exclude-standard         # Ignored files

    # Remotes
    rv = remote -v
    ra = remote add
    rrm = remote rm
    rrn = remote rename

    # Pull/push
    pr = pull --rebase
    p = push

    # Branches
    br = branch
    co = checkout
    cob = checkout -b
    brlrm = branch -d                               # branch local rm
    brlrmf = branch -D                              # branch local rm, force
    brrrm = push origin --delete                    # branch remote rm
    bp = fetch -p                                   # prune branches deleted from origin

    # Rebase/Merge
    r = rebase
    ri = rebase -i
    ri2 = rebase -i HEAD~2
    rc = rebase --continue
    ra = rebase --abort
    mt = mergetool
    mnf = merge --no-ff
    fancymerge = "!func() { set -e; git checkout $1; git pull --rebase; git checkout master; git pull --rebase; git merge --no-ff $1; set +e; }; func"

    # Set upstream
    su = branch -u

    urd = update-ref -d

[core]
    excludesfile = .gitignore_global
    autocrlf = input
    editor = vim
    pager = less -R

[push]
    default = current

[diff]
    tool = vimdiff

[difftool]
    prompt = true

[merge]
    tool = vimdiff

